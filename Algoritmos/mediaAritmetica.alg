algoritmo "Media Aritmetica"

// Autor :Franco Flores
// Data : 02/01/2021
// Seção de Declarações 
var
   N1, N2 , Media: Real

inicio
      Escreva("Digite o Primeiro numero: ")
      Leia(N1)
      Escreva("Digite o Segundo numero: ")
      Leia(N2)
      
      Media <- (N1 + N2)/2
      
      Escreva("A Media aritmetica entre ",N1," e ",N2," e igual a ", Media)

fimalgoritmo
